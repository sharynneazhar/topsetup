<div class="row">

  <!-- only visible on phones and tablets -->
  <div class="col-xs-12 hide-desktop">
    <div class="setup-information">
      <h1><%= @setup.name %></h1>
      by <%= link_to @setup_user.username, edit_user_registration_path %>
    </div>
    <hr style="margin-bottom:20px;">
  </div>

  <div class="col-md-8">
    <% if @setup_images.blank? %>
      <div class="setup-images">
        <div class="hero-image">
          <%= link_to image_tag("no-image", :class => "img-responsive")%>
        </div>
      </div>
    <% else %>
      <div class="setup-images">
        <div class="hero-image">
          <%= link_to image_tag(@setup_images.first.image.hero.url,
            :class => "img-responsive"), "#imagesModal", "data-toggle": "modal" %>
        </div>
        <div class="thumbnails hide-mobile">
          <% @setup_images.each do |image| %>
            <%= link_to image_tag(image.image.thumbBig.url,
              :class => "img-responsive"), "#imagesModal", "data-toggle": "modal" %>
          <% end %>
        </div>
      </div>
    <% end %>
    <hr>
    <div class="setup-description">
      <div class="setup-description-text">
        <% if !@setup.description.blank? %>
          <%= simple_format(@setup.description) %>
        <% else %>
          <% if (current_user && current_user.id == @setup.user_id) %>
            <button type="button" class="btn btn-accent">
              Tell us more about your setup!
            </button>
          <% else %>
            <%= @setup_user.username %> hasn't added a description.
            <i class="fa fa-frown-o fa-lg"></i>
          <% end %>
        <% end %>
      </div>
      <div class="setup-description-form">
        <%= render "setups/partials/addDescription" %>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="hide-mobile">
      <div class="setup-information">
        <h1><%= @setup.name %></h1>
        by <%= link_to @setup_user.username, edit_user_registration_path %>
      </div>
      <% if (current_user && current_user.id == @setup.user_id) %>
        <div class="button-group">
          <%= link_to edit_setup_path(@setup), :class => "btn btn-edit" do %>
            <i class="fa fa-pencil"></i>
          <% end %>
          <%= link_to @setup, method: :delete, :class => "btn btn-remove",
            data: { confirm: 'Are you sure?' } do %>
            <i class="fa fa-trash"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    <hr style="margin-bottom:8px;">
    <div class="setup-parts list-group">
      <% @parts.each do |part| %>
        <div class="list-group-item">
          <p class="part-type">
            <%= Category.find(part.category_id).name if part.category_id.present? %>
          </p>
          <p class="part-name"><%= link_to part.name,
            url_with_protocol(part.link), :target => "_blank" %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "setups/partials/imageModal" %>
