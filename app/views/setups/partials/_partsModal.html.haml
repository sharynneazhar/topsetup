#partsModal.modal.fade{"aria-labelledby" => "parts", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-lg{:role => "document"}
    .modal-content
      = form_for(part) do |f|
        - if part.errors.any?
          #error_explanation
            %h2
              = pluralize(part.errors.count, "error")
              prohibited this part from being saved:
            %ul
              - part.errors.full_messages.each do |message|
                %li= message
        .field
          = f.label Category.find(part.category_id).name, :class => "part-name"
          = f.hidden_field :category_id, :value => part.category_id
        .field
          = f.label :name, :class => "part-name"
          = f.hidden_field :category_id, :value => part.category_id
          = f.text_field :name, :class => "form-control"
        .field
          = f.label :link, :class => "part-name"
          = f.text_field :link, :class => "form-control"
        .actions
          = f.submit
