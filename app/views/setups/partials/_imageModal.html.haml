#imagesModal.modal.fade{"aria-labelledby" => "images", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-lg{:role => "document"}
    .modal-content
      #carousel.carousel.slide{"data-interval" => "false"}
        / Wrapper for slides
        .carousel-inner{:role => "listbox"}
          - @setup_images.each_with_index do |image, idx|
            = content_tag :div, image_tag(image.image_url,  :class => "img-responsive"), class: (idx == 0 ? 'item active' : 'item')
        / Controls
        %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel", :role => "button"}
          %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
          %span.sr-only Previous
        %a.right.carousel-control{"data-slide" => "next", :href => "#carousel", :role => "button"}
          %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
          %span.sr-only Next
        / Indicators
        %ol.carousel-indicators.hide-mobile
          - @setup_images.each_with_index do |image, idx|
            = content_tag :li, image_tag(image.image.thumb.url,  :class => "img-responsive") , data: { target: '#carousel', slide_to: idx}, class: (idx == 0 ? 'active' : nil)
