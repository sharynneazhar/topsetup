<div class="login container">
  <div class="social-login">
    <p>Log in with</p>
    <div class="social-login-buttons">
      <span class="fa-stack fa-2x">
        <i class="fa fa-square fa-stack-2x"></i>
        <i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
      </span>
      <span class="fa-stack fa-2x">
        <i class="fa fa-square fa-stack-2x"></i>
        <i class="fa fa-twitter fa-stack-1x fa-inverse"></i>
      </span>
      <span class="fa-stack fa-2x">
        <i class="fa fa-square fa-stack-2x"></i>
        <i class="fa fa-google fa-stack-1x fa-inverse"></i>
      </span>
    </div>
  </div>
  <div class="social-login-form">
    <p>or with Top Setup</p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-field">
        <%= f.text_field :login, autofocus: true, placeholder: "username", :class => "login-input" %>
      </div>
      <div class="form-field">
        <%= f.password_field :password, autocomplete: "off", placeholder: "password", :class => "login-input" %>
      </div>
      <div class="actions text-center">
        <%= f.submit "login", :class => 'btn btn-login' %>
      </div>
    <% end %>
  </div>
  <p>
    Don't have an account yet? <%= link_to "Sign up", new_registration_path(resource_name), :class => 'link' %> here!
  </p>
</div>
