!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %title Top Setup | Pure Aesthetics
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    %meta{:content => "Check out some of the top desk setups from around the globe. Have one yourself? Show it off!", :name => "description"}
    %meta{:content => "gaming, setup, desk, pc, mac, macbook, work, cable management", :name => "keywords"}
    = csrf_meta_tags
    %link{:href => "https://fonts.googleapis.com/css?family=Lato:300,400,700,900|Open+Sans:300,400,700", :rel => "stylesheet"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    = render "layouts/header"
    .wrapper
      - if notice
        .alert.alert-success.alert-dismissible{:role => "alert"}
          %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          = notice
      - if alert
        .alert.alert-danger.alert-dismissible{:role => "alert"}
          %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          = alert
      = yield
      - if (current_user)
        - if current_page?("/")
          = link_to new_setup_path, :class => "btn btn-add hide-desktop hidden-sm" do
            %i.fa.fa-plus.fa-2x
